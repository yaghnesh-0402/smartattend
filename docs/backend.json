{
  "entities": {
    "Student": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Student",
      "type": "object",
      "description": "Represents a student with their identifying information.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the student."
        },
        "rollNo": {
          "type": "string",
          "description": "The roll number of the student, scanned from the barcode."
        },
        "name": {
          "type": "string",
          "description": "The name of the student."
        },
        "year": {
          "type": "number",
          "description": "The academic year of the student."
        },
        "section": {
          "type": "string",
          "description": "The section the student belongs to."
        },
        "branch": {
          "type": "string",
          "description": "The branch or department of the student."
        },
        "avatarUrl": {
          "type": "string",
          "description": "URL for the student's avatar image."
        }
      },
      "required": [
        "id",
        "rollNo",
        "name",
        "year",
        "section",
        "branch",
        "avatarUrl"
      ]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "collections": {
      "students": {
        "schema": {
          "$ref": "#/entities/Student"
        },
        "description": "Stores information about each student."
      }
    }
  }
}
